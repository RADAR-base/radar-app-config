<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">
    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,mssql"/>
    <property name="now" value="now()" dbms="postgresql"/>
    <property name="now" value="CURRENT_TIMESTAMP()" dbms="h2"/>

    <changeSet id="Create condition table" author="joris" dbms="h2,postgresql">
        <createTable tableName="condition">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="project_id" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="expression" type="clob">
                <constraints nullable="true"/>
            </column>
            <column name="status" type="config_state_status">
                <constraints nullable="false"/>
            </column>
            <column name="rank" type="float" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="datetime" defaultValueComputed="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_at" type="datetime" defaultValueComputed="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="deactivated_at" type="datetime">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="Add condition index" author="joris">
        <createIndex tableName="condition" indexName="idx_condition_project_name">
            <column name="status"/>
            <column name="project_id"/>
            <column name="name"/>
        </createIndex>
        <createIndex tableName="condition" indexName="idx_condition_project_rank">
            <column name="status"/>
            <column name="project_id"/>
            <column name="rank"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
